  </div>

  <script>
    const table = document.getElementById('itemTable').querySelector('tbody');
    const addRowBtn = document.getElementById('addRow');
    const exportBtn = document.getElementById('exportCsv');

    function renumber() {
      Array.from(table.rows).forEach((r, i) => r.cells[0].textContent = i+1);
    }

    addRowBtn.addEventListener('click', () => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
        <td contenteditable></td>
      `;
      table.appendChild(tr);
      renumber();
    });

    exportBtn.addEventListener('click', () => {
      const rows = Array.from(table.rows);
      const headers = Array.from(document.querySelectorAll('#itemTable thead th')).map(h => h.textContent.trim());
      const data = [headers];
      rows.forEach(r => {
        const cols = Array.from(r.cells).map(c => c.textContent.replace(/\n/g,' ').trim());
        data.push(cols);
      });
      const csv = data.map(r => r.map(cell => '"'+cell.replace(/"/g,'""')+'"').join(',')).join('\n');
      const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'jadual_item.csv';
      a.click();
      URL.revokeObjectURL(url);
    });

    // initial renumber
    renumber();
  </script>
</body>
